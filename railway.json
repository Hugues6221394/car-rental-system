{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "maven",
    "buildCommand": "cd final-project/cars && mvn clean package -DskipTests",
    "buildOutput": "final-project/cars/target/*.jar",
    "watchPaths": ["final-project/cars/**"]
  },
  "deploy": {
    "startCommand": "cd final-project/cars && java -jar target/*.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
